@page
 @model HelloWorldApp.Pages.HelloWorld
 
 @{ ViewData["Title"] = "Hello World"; }
 
 <h2>Hello World</h2>
 
 <h3>The time on the server is @DateTime.Now</h3>
 
 <p>
     Enter your name...
 </p>
 
 <div asp-validation-summary="All"></div>
 <form method="POST">
     <div>Name: <input asp-for="name"/></div>
     <br/>
     <input type="submit"/>
 </form>
 
 <br/>
 
 <div id="result">@this.Model.name</div>
 
 @section Scripts
 {
     @{ await Html.RenderPartialAsync("Shared/_ValidationScriptsPartial"); }
 }